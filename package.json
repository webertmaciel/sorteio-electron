{
  "name": "sorteio-electron",
  "version": "4.1.0",
  "description": "Aplicativo de sorteio de nomes a partir de um arquivo XLS.",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "canvas-confetti": "^1.9.3",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.seu-nome.sorteioapp",
    "productName": "Sorteador",
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "files": [
      "src/**/*"
    ],
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "extraResources": [
      {
        "from": "ganhadores",
        "to": "ganhadores",
        "filter": [
          "**/*"
        ]
      }
    ]
  }
}
